{
    "root": true,
    "env": {
        "browser": true,
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": ["prettier", "@typescript-eslint"],
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/eslint-recommended", "plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
    "rules": {
        "prefer-const": "off",

        "prettier/prettier": [
            "warn", // off, warn or error
            {
                "endOfLine": "auto"
            }
        ],

        // Allow empty interfaces
        "@typescript-eslint/no-empty-interface": "off",

        // Allow specifying types for simple objects like number, string, bool
        "@typescript-eslint/no-inferrable-types": "warn",

        "@typescript-eslint/no-non-null-assertion": "off"
    }
}